<div class="flats">
  <div class="container">
    <div class="row">
      <div class="list-title page-header">
        <h1>Discover inspiring places</h1>
      </div>

      <% @flats.each do |flat| %>

        <div class="listing">
            <div class="col-sm-6 col-md-4 listing-max">
              <% if flat.flat_pictures.first %>
                <%= link_to (image_tag flat.flat_pictures.first.photo(:list), class: "image-flat"), flat %>
              <% else %>
                <%= link_to flat do %>
                  <%= image_tag "http://placehold.it/400x250/95a5a6/ecf0f1", class: "image-flat" %>
                <% end %>
              <% end %>
              <div class="detail-flat">
                <div class="row">
                    <div class="col-md-12 title-flat-list">
                      <%= link_to flat.title, flat %>
                    </div>
                    <div class="col-md-6 city-flat-list">
                      <%= link_to flat.city, flat %>
                    </div>
                    <div class="col-md-6 price-flat-list text-right">
                      <%= link_to flat.price, flat %> â‚¬
                    </div>
                  </div>
                </div>

              </div>
            </div>

      <% end %>

    </div>
  </div>
</div>


